	<positions>
		<position>OScatchPhrase</position>
		<position>OSfooter</position>
		<position>OSleft</position>
		<position>OSphoneCall</position>
		<position>OSrandom</position>
		<position>OSright</position>
		<position>OStop</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_onestep.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_onestep.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
					name="randomtext" 
					type="list"
					label="TPL_ONESTEP_FIELD_RANDOMTEXT_LABEL"
					description="TPL_ONESTEP_FIELD_RANDOMTEXT_DESC"
				>
					<option value="0">TPL_ONESTEP_OPTION_CONTENT</option>
					<option value="1">TPL_ONESTEP_OPTION_RANDOM</option>
					<option value="2">TPL_ONESTEP_OPTION_BOTH</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>